@model BarberShopSystem.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}
@* //New *@
<h1 class="text-center">Editar Reserva</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Fecha</label>
                <div class="col-sm-8">
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">ID del Profesional</label>
                <div class="col-sm-8">
                    <input asp-for="ProfesionalId" class="form-control" />
                    <span asp-validation-for="ProfesionalId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">ID del Cupo</label>
                <div class="col-sm-8">
                    <input asp-for="CupoId" class="form-control" />
                    <span asp-validation-for="CupoId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">ID del Servicio</label>
                <div class="col-sm-8">
                    <input asp-for="ServicioId" class="form-control" />
                    <span asp-validation-for="ServicioId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">ID del Cliente</label>
                <div class="col-sm-8">
                    <input asp-for="ClienteId" class="form-control" />
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8 offset-sm-4">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
