                @Html.DisplayFor(modelItem => item.Profesional.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cupo.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Id)
