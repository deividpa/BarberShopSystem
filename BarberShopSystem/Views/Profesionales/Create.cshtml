@model BarberShopSystem.Models.Profesional

@{
    ViewData["Title"] = "Crear Profesional";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center">Crear Profesional</h1>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre profesional:</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label">Correo electrónico:</label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NumeroTelefono" class="form-label">Número de celular:</label>
                    <input asp-for="NumeroTelefono" class="form-control" />
                    <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ServiciosSeleccionados" class="form-label">Servicios:</label>
                    <select asp-for="ServiciosSeleccionados" class="form-control" multiple>
                        @{
                            var servicios = ViewBag.Servicios as List<Servicio>;
                            if (servicios != null)
                            {
                                var selectList = new SelectList(servicios, "Id", "Descripcion");
                                foreach (var item in selectList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        }
                    </select>
                    <span asp-validation-for="ServiciosSeleccionados" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-secondary ml-2">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
